
@{
    ViewBag.Title = "Index";
    var F = Html.F();
}

@section script{

}

@section body{
    @(
    F.Panel()
        .ShowBorder(false)
        .ShowHeader(false)
        .IsViewPort(true)
        .Layout(LayoutType.Fit)
        .Items(
            F.Grid()
                .EnableCollapse(false)
                .Title("学生信息表")
                .ShowHeader(true)
                .ShowBorder(true)
                .ID("gridStudent")
                .EnableCheckBoxSelect(true)
                .AllowPaging(true)
                .PageSize(20)
                .DataIDField("ID")
                .DataTextField("Name")
                .Toolbars(
                    F.Toolbar()
                        .ID("toolSearch")
                        .Items(
                            F.TextBox()
                                .ID("tbCollege")
                                .EmptyText("学院名称")
                                .Width(100),
                            F.TextBox()
                                .ID("tbClass")
                                .EmptyText("班级")
                                .Width(100),
                            F.NumberBox()
                                .ID("tbYear")
                                .EmptyText("入学年份")
                                .Width(80)
                                .NoDecimal(true)
                                .ShowTrigger(false),
                            F.DropDownList()
                                .ID("ddlSex")
                                .Width(100)
                                .Items(
                                    F.ListItem()
                                        .Value("all")
                                        .Text("所有性别"),
                                    F.ListItem()
                                        .Value("0")
                                        .Text("男"),
                                    F.ListItem()
                                        .Value("1")
                                        .Text("女")
                                ),
                            F.DropDownList()
                                .ID("ddlStuStatus")
                                .Width(120)
                                .Items(
                                    F.ListItem()
                                        .Value("all")
                                        .Text("所有学生状态"),
                                    F.ListItem()
                                        .Value("0")
                                        .Text("在读"),
                                    F.ListItem()
                                        .Value("1")
                                        .Text("休学"),
                                    F.ListItem()
                                        .Value("2")
                                        .Text("退学"),
                                    F.ListItem()
                                        .Value("3")
                                        .Text("转学"),
                                    F.ListItem()
                                        .Value("4")
                                        .Text("延期毕业"),
                                    F.ListItem()
                                        .Value("5")
                                        .Text("毕业"),
                                    F.ListItem()
                                        .Value("6")
                                        .Text("其它")
                                ),
                            F.DropDownList()
                                .ID("ddlStatus")
                                .Width(120)
                                .Items(
                                    F.ListItem()
                                        .Value("all")
                                        .Text("所有住宿状态"),
                                    F.ListItem()
                                        .Value("0")
                                        .Text("非入住"),
                                    F.ListItem()
                                        .Value("1")
                                        .Text("入住"),
                                    F.ListItem()
                                        .Value("2")
                                        .Text("入住（走读）")
                                ),
                            F.ToolbarSeparator(),
                            F.Button()
                                .ID("btnSearch")
                                .Text("搜索")
                                .Width(80)
                        ),
                    F.Toolbar()
                        .ID("toolgroup")
                        .Items(
                            F.Button()
                                .ID("btnAdd")
                                .Text("新增"),
                            F.ToolbarSeparator()
                                .MarginLeft(10)
                                .MarginRight(10),
                            F.Button()
                                .ID("btnDelList")
                                .Text("删除")
                        )
                )
                .Columns(
                    F.RowNumberField()
                        .TextAlign(TextAlign.Center),
                    F.RenderField()
                        .HeaderText("学号")
                        .DataField("ID")
                        .TextAlign(TextAlign.Center)
                        .Width(120),
                    F.RenderField()
                        .HeaderText("姓名")
                        .DataField("Name")
                        .TextAlign(TextAlign.Center)
                        .Width(80),
                    F.RenderField()
                        .HeaderText("班级")
                        .DataField("ClassName")
                        .TextAlign(TextAlign.Center)
                        .Width(80),
                    F.RenderField()
                        .HeaderText("学院")
                        .DataField("College")
                        .TextAlign(TextAlign.Center)
                        .Width(80),
                    F.RenderField()
                        .HeaderText("入学年份")
                        .DataField("Year")
                        .TextAlign(TextAlign.Center)
                        .Width(80),
                    F.RenderField()
                        .HeaderText("性别")
                        .DataField("Sex")
                        .TextAlign(TextAlign.Center)
                        .Width(50),
                    F.RenderField()
                        .HeaderText("学生状态")
                        .DataField("StuStatus")
                        .TextAlign(TextAlign.Center)
                        .Width(80),
                    F.RenderField()
                        .HeaderText("住宿状态")
                        .DataField("Status")
                        .TextAlign(TextAlign.Center)
                        .Width(80),
                    F.RenderField()
                        .HeaderText("宿舍")
                        .DataField("FJH")
                        .TextAlign(TextAlign.Center)
                        .Width(180),
                    F.RenderField()
                        .HeaderText("手机号")
                        .DataField("Tel")
                        .TextAlign(TextAlign.Center)
                        .Width(120),
                    F.RenderField()
                        .HeaderText("邮箱")
                        .DataField("Email")
                        .TextAlign(TextAlign.Center)
                        .Width(120),
                    F.RenderField()
                        .HeaderText("备注")
                        .DataField("Remark")
                        .TextAlign(TextAlign.Center)
                        .Width(150)
                )
                .DataSource(ViewBag.gridStudent)
        )

    )

}

