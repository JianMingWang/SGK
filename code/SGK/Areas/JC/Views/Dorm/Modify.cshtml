@model SGK.Areas.JC.Models.ModifyModel
@{
    ViewBag.Title = "编辑";
    var F = Html.F();
}
@section script{
    
    }
@section body{
    @(
        F.Form()
            .BodyPadding(10)
            .AutoScroll(true)
            .ShowHeader(false)
            .ShowBorder(false)
            .ID("ModifyForm")
            .IsViewPort(true)
            .Toolbars(
                F.Toolbar()
                    .Items(
                        F.Button()
                            .Icon(Icon.SystemClose)
                            .Text("关闭")
                            .ID("btnHide")
                            .Listener("click", "F.activeWindow.hide();"),
                        F.ToolbarSeparator(),
                        F.Button()
                            .OnClick(Url.Action("Modify_btnSaveClose_Click"),"ModifyForm")
                            .Icon(Icon.SystemSave)
                            .Text("保存修改")
                            .ID("btnSaveClose")
                    )
            )
            .Rows(
                F.FormRow()
                    .Items(
                        F.TextBox()
                            .Text(@Model.ID)
                            .Label("宿舍ID")
                            .Hidden(true)
                            .ID("DormID")
                    ),
                F.FormRow()
                    .Items(
                        F.Label()
                            .Text(@Model.ID)
                            .Label("宿舍ID")
                            .ID("ID"),
                        F.Label()
                            .Text(@Model.Campus)
                            .Label("校区")
                            .ID("Campus")
                    ),
                F.FormRow()
                    .Items(
                        F.Label()
                            .Text(@Model.Region)
                            .Label("宿舍区")
                            .ID("Region"),
                        F.Label()
                            .Text(@Model.SSLD)
                            .Label("宿舍楼")
                            .ID("SSLD")
                    ),
                F.FormRow()
                    .Items(
                        F.Label()
                            .Text(@Model.FJH)
                            .Label("房间号")
                            .ID("FJH"),
                        F.NumberBox()
                            .Text(@Model.CWS)
                            .Required(true)
                            .NoDecimal(true)
                            .NoNegative(true)
                            .MaxValue(10)
                            .MinValue(1)
                            .Label("床位数")
                            .ID("CWS")
                    ),
                F.FormRow()
                    .Items(
                        F.DropDownList()
                            .SelectedValue(@Model.SSLX.ToString())
                            .Required(true)
                            .Label("宿舍类型")
                            .DataTextField("text")
                            .DataValueField("value")
                            .DataSource(@Model.SSLX_ddlList)
                            .ID("SSLX"),
                            F.NumberBox()
                            .Text(@Model.ZSFY)
                            .Required(true)
                            .NoDecimal(true)
                            .NoNegative(true)
                            .Label("住宿标准")
                            .ID("ZSFY")
                    ),
                F.FormRow()
                    .Items(
                        F.DropDownList()
                            .SelectedValue(@Model.MXXSCC.ToString())
                            .Required(true)
                            .Label("面向学生层次")
                            .DataTextField("text")
                            .DataValueField("value")
                            .DataSource(@Model.MXXSCC_ddlList)
                            .ID("MXXSCC"),
                        F.DropDownList()
                            .SelectedValue(@Model.MXXSXB.ToString())
                            .Required(true)
                            .Label("面向学生性别")
                            .DataTextField("text")
                            .DataValueField("value")
                            .DataSource(@Model.MXXSXB_ddlList)
                            .ID("MXXSXB")
                    ),
                F.FormRow()
                    .Items(
                        F.TextArea()
                            .Text(@Model.Remark)
                            .Required(false)
                            .Label("备注")
                            .EmptyText("备注内容，不超过500字...")
                            .MaxLength(500)
                            .ID("Remark")
                    )
            )
    )
}
