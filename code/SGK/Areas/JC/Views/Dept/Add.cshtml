
@{
    ViewBag.Title = "Add";
    var F = Html.F();
}

@section body{
    @(F.Form()
            .BodyPadding(10)
            .AutoScroll(true)
            .ShowHeader(false)
            .ShowBorder(false)
            .ID("SimpleForm1")
            .IsViewPort(true)
            .Toolbars(
                F.Toolbar()
                    .ToolbarAlign(ToolbarAlign.Center)
                    .Position(ToolbarPosition.Bottom)
                    .Items(
                        F.Button()
                            .ID("btnSubmit")
                            .IconFont(IconFont.Save)
                            .ValidateForms("SimpleForm1")
                            .CssClass("marginr")
                            .Text("保存")
                            .OnClick(Url.Action("btnSubmit_Click"), "SimpleForm1")
                    )
            )
            .Rows(
                F.FormRow()
                    .Items(
                        F.TextBox()
                            .ID("tbDeptID")
                            .Required(true)
                            .Label("单位编号")
                            .ShowRedStar(true),
                        F.TextBox()
                            .ID("tbDeptName")
                            .Required(true)
                            .Label("单位名称")
                            .ShowRedStar(true)
                    )
            )
    )
}

